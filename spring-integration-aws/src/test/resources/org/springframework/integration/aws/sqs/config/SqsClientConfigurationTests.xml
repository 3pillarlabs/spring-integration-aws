<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:int-sqs="http://www.springframework.org/schema/integration/sqs"
	xmlns:int-stream="http://www.springframework.org/schema/integration/stream"
	xsi:schemaLocation="http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
		http://www.springframework.org/schema/integration/stream http://www.springframework.org/schema/integration/stream/spring-integration-stream.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/integration/sqs http://www.springframework.org/schema/integration/sqs/spring-integration-sqs-2.0.xsd">

  <bean id="awsClientConfiguration" class="com.amazonaws.ClientConfiguration">
    <property name="proxyHost" value="PROXY_HOST"/>
    <property name="protocol" value="HTTPS"/>
  </bean>

  <bean id="testQueue" class="org.springframework.integration.aws.support.BlockingQueueFactory" 
      factory-method="createBlockingQueue" />

  <int-sqs:channel queue-name="testQueue" id="sqsChannelWithClientConfiguration" 
  	queue="testQueue" sqs-executor-proxy="sqsExecutorProxy" 
  	aws-client-configuration="awsClientConfiguration" />
</beans>
